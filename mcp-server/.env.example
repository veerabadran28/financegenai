# ============================================
# Document Processor Configuration
# ============================================
# Copy this file to .env and configure for your environment

# ============================================
# AWS Textract Configuration
# ============================================

# Enable/disable AWS Textract (set to 'true' to enable)
AWS_TEXTRACT_ENABLED=false

# AWS Region where Textract is available
AWS_REGION=us-east-1

# AWS Credentials (Optional - can use IAM roles instead)
# Leave empty to use IAM role (recommended for EC2/ECS/Lambda)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Textract API Mode
# - 'detect': Simple text extraction (cheaper, ~$1.50/1000 pages)
# - 'analyze': Advanced with tables/forms (expensive, ~$50/1000 pages)
TEXTRACT_API_MODE=analyze

# Cost Controls
# Maximum file size to send to Textract (in MB)
TEXTRACT_MAX_FILE_SIZE_MB=10

# Maximum pages to process with Textract
TEXTRACT_MAX_PAGES=100

# ============================================
# Local Processing Configuration
# ============================================

# Enable local fallback when Textract fails or is disabled
USE_LOCAL_FALLBACK=true

# Enable pdfplumber for better table extraction
ENABLE_PDFPLUMBER=true

# Enable PyMuPDF for fast text extraction
ENABLE_PYMUPDF=true

# ============================================
# Processing Options
# ============================================

# Default chunk size for text splitting (in characters)
CHUNK_SIZE=1500

# Extract images from documents (experimental)
EXTRACT_IMAGES=false

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log which processor is selected for each document
LOG_PROCESSOR_SELECTION=true

# ============================================
# Example Configurations
# ============================================

# Configuration 1: Local-only (No AWS, good for development)
# AWS_TEXTRACT_ENABLED=false
# USE_LOCAL_FALLBACK=true

# Configuration 2: AWS Primary (Enterprise production)
# AWS_TEXTRACT_ENABLED=true
# AWS_REGION=us-east-1
# TEXTRACT_API_MODE=analyze
# USE_LOCAL_FALLBACK=true

# Configuration 3: Cost-conscious (Use Textract only for complex docs)
# AWS_TEXTRACT_ENABLED=true
# TEXTRACT_API_MODE=detect
# TEXTRACT_MAX_FILE_SIZE_MB=5
# TEXTRACT_MAX_PAGES=50
